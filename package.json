{
  "name": "themer",
  "displayName": "Themer",
  "description": "Customize VS Code with AI",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "AI",
    "Themes"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "themes": [
      {
        "label": "Generated by Themer",
        "uiTheme": "vs-dark",
        "path": "./themes/themer.json"
      }
    ],
    "chatParticipants": [
      {
        "id": "themer.chat",
        "name": "themer",
        "fullName": "Themer",
        "description": "Let's make your VS Code look awesome!",
        "isSticky": true,
        "commands": [],
        "disambiguation": [
          {
            "category": "themer",
            "description": "The user wants to customize the look of VS Code",
            "examples": [
              "Change the color of the sidebar",
              "Make the editor background darker",
              "Can you make the font size bigger?"
            ]
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
